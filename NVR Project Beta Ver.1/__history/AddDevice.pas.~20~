var
  FormAddDevice: TFormAddDevice;

implementation

{$R *.dfm}

procedure TFormAddDevice.cbPortDefaultClick(Sender: TObject);
begin
      if cbPortDefault.Checked=true then
      begin
         edLDPort.Text:='80';
         edLDPort.Enabled:=false;
      end
      else if cbPortDefault.Checked=false then
      begin
          edLDPort.Text:='';
          edLDPort.Enabled:=true;
      end;

      

end;


end.
